<Window x:Class="Beauty_Salon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Beauty_Salon"
        mc:Ignorable="d"
        Title="Бархатные бровки" Height="450" Width="800" Icon="/Resources/beauty_logo.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Background="#FFE1E4FF" Grid.ColumnSpan="4"/>


        <StackPanel Orientation="Horizontal"  VerticalAlignment="Center" Grid.ColumnSpan="4">
            <Image Source="Resources/beauty_logo.png" Width="60" Grid.Column="0"
                   Margin="30,0,0,0"/>
            <TextBlock FontFamily="Tahoma" FontSize="18" Margin="20,0,0,0" Grid.Column="0"
                       VerticalAlignment="Center" FontWeight="Bold">Бархатные бровки</TextBlock>
            <Button x:Name="btn_AdmmimOrClient" Height="40" VerticalAlignment="Center" HorizontalAlignment="Right" FontFamily="Tahoma" FontWeight="Bold" Background="#FFFF4A6D" Margin="15,0,15,0" BorderBrush="#00000000" Click="Button_Click">Режим пользователя</Button>
            <Button x:Name="btn_AddService" Height="40" VerticalAlignment="Center" HorizontalAlignment="Right" FontFamily="Tahoma" FontWeight="Bold" Visibility="Collapsed" Background="#FFFF4A6D" Margin="15,0,15,0" BorderBrush="#00000000" Click="btn_AddService_Click">Добавить услугу</Button>
            <Button x:Name="btn_ListClient" Height="40" VerticalAlignment="Center" HorizontalAlignment="Right" FontFamily="Tahoma" FontWeight="Bold" Visibility="Collapsed" Background="#FFFF4A6D" Margin="15,0,15,0" BorderBrush="#00000000" Click="btn_ListClient_Click">Список записей</Button>
        </StackPanel>
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden" Navigated="MainFrame_Navigated"></Frame>
    </Grid>
</Window>