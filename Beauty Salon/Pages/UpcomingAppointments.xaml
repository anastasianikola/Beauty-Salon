<Page x:Class="Beauty_Salon.Pages.UpcomingAppointments"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Ближайшие записи">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Ближайшие записи (сегодня и завтра)" 
                   FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <ListView x:Name="lvAppointments" Grid.Row="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="5" Padding="10">
                        <StackPanel>
                            <TextBlock Text="{Binding ServiceTitle}" FontSize="16" FontWeight="Bold"/>
                            <TextBlock Text="{Binding ClientName}" />
                            <TextBlock Text="{Binding ClientContact}" />
                            <TextBlock Text="{Binding StartTime, StringFormat='Дата и время: {0:dd.MM.yyyy HH:mm}'}"/>
                            <TextBlock Text="{Binding TimeLeft}" Foreground="{Binding TimeLeftColor}" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
